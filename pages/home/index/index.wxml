<!--pages/home/index/index.wxml-->
<view class="page-home">
  <view class="page-header">
    <view class="section-search">
      <view class="location"><van-icon name="location-o" custom-class="location-o" />苏州</view>
      <input placeholder="请输入标题进行搜索" class="serach-input" value="{{inputVal}}" bindinput="handlerInput">
        <van-icon name="search" class="search-icon" />
        <van-icon name="close" wx:if="{{inputVal}}" bindtap="clearInput" class="close-icon"/>
      </input>
    </view>
    <view class="slider-img">
      <swiper indicator-dots="{{swiper.indicatorDots}}"
            autoplay="{{swiper.autoplay}}" 
            interval="{{swiper.interval}}"
            duration="{{swiper.duration}}"
            indicator-color="{{swiper.color}}">
        <block wx:for="{{background}}" 
                wx:for-item="item"
                wx:key="index">
          <swiper-item>
            <image class="test-iamge" src="{{item}}"/>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>
  <view class="page-body">
    <view class="section-agent">
      <view class="title-ch">代理机构<text class="title-en">AGENCY</text></view>
      <view class="agent-con">
        <image bindtap="handlerJumpApp" class="swt-logo" src="../../../assets/images/swt.jpeg"/>
      </view>
    </view>
    <view class="block-item {{ activeIndex===index ? 'active' : 'un-active' }}"
        wx:for="{{dataMockBlock}}" 
        wx:for-index="index" 
        wx:for-item="item"
        wx:key="index"
        data-idx="{{index}}"
        bindtap="handlerChange">
        <text>{{item.title}}</text>
      </view>
  </view>
  <view class="page-footer">
    <view class="title-ch">苏州机遇<text class="title-en">OPPORTUNITIES IN JIANGSU</text></view>
    <view wx:for="{{dataMockList}}" 
        wx:for-index="index" 
        wx:for-item="item"
        wx:key="index">
      <list-item 
        image="{{item.image}}"
        title="{{item.title}}"
        name="{{item.name}}"
        time="{{item.time}}"/>
    </view>
  </view>
</view>
