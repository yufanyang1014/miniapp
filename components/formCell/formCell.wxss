/* components/formCell/formCell.wxss */
.zebra-form-cell {
  flex: 1;
  display: flex;
  max-width: 100%;
  box-sizing: border-box;
  padding: 0 28rpx;
  background-color: #fff;
}
.zebra-form-cell .input-wrap {
  position: relative;
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  justify-content: flex-start;
  width: 100%;
  border-bottom: 2rpx solid #f7f7f7;
  align-items: center;
}
.zebra-form-cell .input-label {
   display: inline-block;
  margin-right: 10rpx;
  min-width: 140rpx;
  padding: 36rpx 0;
  box-sizing: border-box;
  font-size: 32rpx;
  color: #333333;
  text-align: left;
  line-height: 36rpx;
}

.zebra-form-cell .input-control {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-end;
  box-sizing: border-box;
}
.zebra-form-cell .input-value {
  flex: 1;
  box-sizing: border-box;
  padding-right: 32rpx;
  border: none;
  height: 100rpx;
  align-items: center;
  text-align: right;
  font-size: 28rpx;
  color: #666666;
}
.zebra-form-cell .input-placeholder {
  color: #CCCCCC;
}
.zebra-form-cell .cell-arrow{
  font-size: 28rpx;
  color: #999999;
}
