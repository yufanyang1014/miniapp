.zebra-toast {
  display: -webkit-flex;
  display: flex;
  color: #fff;
  font-size: 14px;
  line-height: 20px;
  border-radius: 4px;
  word-break: break -all;-webkit-align-items: center;
  align-items: center;-webkit-flex-direction: column;
  flex-direction: column;-webkit-justify-content: center;
  justify-content: center;
  box-sizing: content-box;
  background-color: rgba(51, 51, 51, .88);
  white-space: pre-wrap;
}
.zebra-toast__container {
  position: fixed;
  top: 50% ;
  left: 50% ;
  max-width: 70% ;
  width: -webkit-fit-content;
  width: fit-content;
  -webkit-transform: translate(-50% , -50%);
  transform: translate(-50% , -50%);
}
.zebra-toast--info {
  padding: 8px 10px;
  min-width: 100px;
}
.zebra-toast--icon {
  width: 100px;
  padding: 10px 10px 15px;
  min-height: 100px;

}
.zebra-toast--icon .zebra-toast__icon {
  line-height: 1;
  font-size: 64px;
}
.zebra-toast--icon .zebra-toast__info {
  padding-top: 5px;
  word-break: break-all;
}
.zebra-toast__loading {
  margin: 10px 0
}
.zebra-toast--top {
  -webkit-transform: translate(0, -30vh);
  transform: translate(0, -30vh)
}
.zebra-toast--bottom {
  -webkit-transform: translate(0, 30vh);
  transform: translate(0, 30vh)
}


.zebra-toast-fade-enter-active,
.zebra-toast-fade-leave-active {
  transition: all .5s;
}
.zebra-toast-fade-enter,
.zebra-toast-fade-leave-active {
  opacity: 0;
  transform: translate(0, -100px);
}
